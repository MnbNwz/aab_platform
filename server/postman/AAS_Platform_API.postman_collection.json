                },
                {
                  "key": "sortBy",
                  "value": "createdAt"
                },
                {
                  "key": "sortOrder",
                  "value": "asc",
                  "description": "Oldest first (FIFO processing)"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "role",
                  "value": "customer",
                  "description": "üîß Enable this to filter only customers",
                  "disabled": true
